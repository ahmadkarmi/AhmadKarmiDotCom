---

<BaseLayout 
  title="Contact" 
  description="Get in touch with Ahmad Al-Karmi for product strategy consulting, speaking engagements, or general inquiries."
>
  <div class="pt-32 pb-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 xl:grid-cols-12 gap-12 xl:gap-20">
        <!-- Contact Info -->
        <div class="xl:col-span-5 space-y-12 animate-fade-in">
          <div>
            <h1 class="font-display text-4xl md:text-5xl text-foreground mb-6 leading-tight">
              {contactPage?.heroTitle || "Turn Ambition into a Real Business."}
            </h1>
            <p class="text-xl text-foreground-secondary leading-relaxed">
              {contactPage?.heroText || "Whether you're a founder looking to scale or an enterprise leader driving transformation, let's discuss how we can build something impactful together."}
            </p>
          </div>
          
          <!-- Social Links -->
          <div class="space-y-6">
            <h3 class="text-sm font-semibold uppercase tracking-wider text-accent">Connect Elsewhere</h3>
            <div class="space-y-4">
              {socialLinks.map(link => (
                <a 
                  href={link.url}
                  target="_blank"
                  class="flex items-center gap-4 text-foreground-secondary hover:text-foreground group transition-colors p-4 rounded-xl border border-border/50 hover:bg-white hover:border-accent/20 hover:shadow-sm"
                >
                  <div class="w-10 h-10 rounded-full bg-background-secondary flex items-center justify-center group-hover:bg-accent/10 group-hover:text-accent transition-colors">
                    <Fragment set:html={link.icon} />
                  </div>
                  <div>
                    <div class="font-medium text-foreground group-hover:text-accent">{link.name}</div>
                    <div class="text-sm text-foreground-muted">{link.username}</div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="xl:col-span-7 animate-slide-up animation-delay-200">
          <div class="glass-card p-8 md:p-10 xl:sticky xl:top-32">
            <h2 class="font-display text-2xl text-foreground mb-8">{contactPage?.formTitle || "Start the Conversation"}</h2>
            <ContactForm />
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

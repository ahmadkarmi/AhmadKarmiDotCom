---
// Pure Astro Grid Component - No React/Hydration Issues
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6 md:gap-8 w-full ${className}`}>
  <slot />
</div>

<style>
  div {
    display: grid !important;
  }
</style>

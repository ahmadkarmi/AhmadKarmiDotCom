---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://www.linkedin.com/in/akarmi', label: 'LinkedIn' },
  { href: 'https://www.threads.com/@karmi.csd', label: 'Threads' },
];
---

<footer class="border-t border-border bg-background-secondary/50">
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      <!-- Brand -->
      <div>
      <a href="/" class="inline-block">
          <img 
            src="/brand/logo-dark-horizontal.png" 
            alt="Ahmad Karmi" 
            class="h-8 w-auto"
          />
        </a>
        <p class="mt-4 text-foreground-secondary text-sm leading-relaxed max-w-xs">
          Product Manager, Digital Strategist, and Creative Technologist building experiences that matter.
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-medium text-foreground mb-4">Explore</h4>
        <ul class="space-y-2">
          <li>
            <a href="/portfolio" class="text-foreground-secondary hover:text-foreground text-sm transition-colors">
              Portfolio
            </a>
          </li>
          <li>
            <a href="/insights" class="text-foreground-secondary hover:text-foreground text-sm transition-colors">
              Insights
            </a>
          </li>
          <li>
            <a href="/contact" class="text-foreground-secondary hover:text-foreground text-sm transition-colors">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h4 class="font-medium text-foreground mb-4">Connect</h4>
        <ul class="space-y-2">
          {socialLinks.map(link => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-foreground-secondary hover:text-foreground text-sm transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a 
              href="mailto:info@ahmadkarmi.com"
              class="text-foreground-secondary hover:text-foreground text-sm transition-colors"
            >
              info@ahmadkarmi.com
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-border flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-foreground-muted text-sm">
        &copy; {currentYear} Ahmad Al-Karmi. All rights reserved.
      </p>
      <div class="flex items-center gap-4 text-sm">
        <a href="/privacy" class="text-foreground-muted hover:text-foreground transition-colors">Privacy Policy</a>
        <span class="text-border">Â·</span>
        <a href="/terms" class="text-foreground-muted hover:text-foreground transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
